<core:View
    controllerName="MTable_Columns"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core">

    <m:Table
        id="idProductsTable"
        inset="false"
        items="{       path: '/ProductCollection',       sorter: {         path: 'Name'       }     }">
        <m:headerToolbar>
            <m:Toolbar>
                <m:content>
                    <m:Title
                        text="Products"
                        level="H2">
                    </m:Title>
                </m:content>
            </m:Toolbar>
        </m:headerToolbar>
        <m:columns>
            <m:Column
                width="12em">
                <m:header>
                    <m:Text
                        text="Product">
                    </m:Text>
                </m:header>
            </m:Column>
            <m:Column
                minScreenWidth="Tablet"
                demandPopin="true">
                <m:header>
                    <m:Text
                        text="Supplier">
                    </m:Text>
                </m:header>
            </m:Column>
            <m:Column
                minScreenWidth="Tablet"
                demandPopin="true"
                hAlign="Right">
                <m:header>
                    <m:Text
                        text="Dimensions">
                    </m:Text>
                </m:header>
            </m:Column>
            <m:Column
                minScreenWidth="Tablet"
                demandPopin="true"
                hAlign="Center">
                <m:header>
                    <m:Text
                        text="Weight">
                    </m:Text>
                </m:header>
            </m:Column>
            <m:Column
                hAlign="Right">
                <m:header>
                    <m:Text
                        text="Price">
                    </m:Text>
                </m:header>
            </m:Column>
        </m:columns>
        <m:items>
            <m:ColumnListItem>
                <m:cells>
                    <m:ObjectIdentifier
                        title="{Name}"
                        text="{ProductId}">
                    </m:ObjectIdentifier>
                    <m:Text
                        text="{SupplierName}">
                    </m:Text>
                    <m:Text
                        text="{parts:[{ path: 'Widthx'},{ path: 'Depthx'},{ path: 'Height'},{ path: 'DimUnit'}]}">
                    </m:Text>
                    <m:ObjectNumber
                        number="{WeightMeasure}"
                        unit="{WeightUnit}"
                        state="{path:'WeightMeasure',formatter:'.weightState'}">
                    </m:ObjectNumber>
                    <m:ObjectNumber
                        number="{Price}"
                        unit="{CurrencyCode}">
                    </m:ObjectNumber>
                </m:cells>
            </m:ColumnListItem>
        </m:items>
    </m:Table>
</core:View>