<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:form="sap.ui.layout.form"
    xmlns:table="sap.ui.table"
    xmlns:core="sap.ui.core">

    <SplitApp
        height="800px">
        <masterPages>
            <Page
                title="Function Import">
                <content>
                    <html:div
                        style="height:1rem">
                    </html:div>
                    <SearchField  
                        search="onListSearchPressed"  liveChange="onListSearchLiveChanged">
                    </SearchField>
                    <List
                        id="listFunctionImport"
                        noDataText="no Function Import"
                        mode="SingleSelectMaster"
                        items="{/aFunctionImport}"
                        selectionChange="onListSelectionChanged">
                        <items>
                            <StandardListItem
                                title="{name}">
                            </StandardListItem>
                        </items>
                    </List>
                </content>
            </Page>
        </masterPages>
        <detailPages>
            <Page
                title="[{name}] Detail Information"
                id="dpageFunctionImport">
                <content>
                    <html:div
                        style="height:1rem">
                    </html:div>
                    <form:SimpleForm
                        columnsL="1"
                        columnsM="1"
                        title="General Information">
                        <form:title>
                        </form:title>
                        <form:content>
                            <Label
                                text="name">
                            </Label>
                            <Text
                                text="{name}">
                            </Text>
                            <Label
                                text="http Method">
                            </Label>
                            <Text
                                text="{httpMethod}">
                            </Text>
                            <Label
                                text="entitySet">
                            </Label>
                            <Link
                                text="{entitySet}" press="onEntitySetLinkPressed">
                            </Link>
                            <Label
                                text="returnType">
                            </Label>
                            <Link
                                text="{returnType}" press="onReturnTypePressed">
                            </Link>
                        </form:content>
                    </form:SimpleForm>
                    <Panel
                        headerText="Parameters">
                        <content>
                            <table:Table  rows="{parameter}"  id="tableFunctionImport"
                                selectionMode="">
                                <table:columns>
                                    <table:Column>
                                        <table:label>
                                            <Label
                                                text="name">
                                            </Label>
                                        </table:label>
                                        <table:template>
                                            <Text
                                                text="{name}">
                                            </Text>
                                        </table:template>
                                    </table:Column>
                                    <table:Column>
                                        <table:label>
                                            <Label
                                                text="type">
                                            </Label>
                                        </table:label>
                                        <table:template>
                                            <Text
                                                text="{type}">
                                            </Text>
                                        </table:template>
                                    </table:Column>
                                    <table:Column>
                                        <table:label>
                                            <Label
                                                text="maxLength">
                                            </Label>
                                        </table:label>
                                        <table:template>
                                            <Text
                                                text="{maxLength}">
                                            </Text>
                                        </table:template>
                                    </table:Column>
                                    <table:Column>
                                        <table:label>
                                            <Label
                                                text="mode">
                                            </Label>
                                        </table:label>
                                        <table:template>
                                            <Text
                                                text="{mode}">
                                            </Text>
                                        </table:template>
                                    </table:Column>
                                </table:columns>
                            </table:Table>
                        </content>
                    </Panel>
                </content>
            </Page>
        </detailPages>
    </SplitApp>
</core:FragmentDefinition>