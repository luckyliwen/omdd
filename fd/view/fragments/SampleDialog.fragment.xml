<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog title="Samples" contentWidth="1024px">
        <beginButton>
            <Button
                text="OK"
                press="onLoadSampleOkPressed">
            </Button>
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press="onLoadSampleCanclePressed">
            </Button>
        </endButton>
        <content>
            <Table id="sampleTable"  mode="SingleSelectLeft"  itemPress="onSampleTableItemPressed"
                items="{ path:'/' }">
                <columns>
                    <Column>
                        <header>
                            <Text
                                text="Category">
                            </Text>
                        </header>
                    </Column>
                    <Column
                        mergeDuplicates="true">
                        <header>
                            <Text
                                text="Sub Category">
                            </Text>
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Right">
                        <header>
                            <Text
                                text="Description">
                            </Text>
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Center">
                        <header>
                            <Text
                                text="Preview">
                            </Text>
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem press="onSampleListItemPressed">
                        <cells>
                            <Text
                                text="{category}">
                            </Text>
                            <Text
                                text="{subCategory}">
                            </Text>
                            <Text
                                text="{description}">
                            </Text>
                            <Image
                                width="12rem"
                                height="8rem"
                                src="{image}">
                            </Image>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Dialog>
</core:FragmentDefinition>